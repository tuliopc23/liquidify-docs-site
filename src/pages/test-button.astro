---
import "liquidify-react/styles";
// biome-ignore lint/correctness/noUnusedImports: Component used in template below
import { Button } from "liquidify-react/button";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Button Test</title>
    <style>
      body {
        padding: 2rem;
        background: #1a1a1a;
        color: white;
        font-family: system-ui;
      }
      .test-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 800px;
      }
      .token-check {
        padding: 1rem;
        background: #2a2a2a;
        border-radius: 8px;
        font-family: monospace;
        font-size: 12px;
      }
    </style>
  </head>
  <body>
    <div class="test-container">
      <h1>LiqUIdify Button Test</h1>

      <div>
        <h2>Button Component</h2>
        <Button client:load variant="filled" tone="accent">Test Button</Button>
      </div>

      <div class="token-check">
        <h3>CSS Variables Check (open DevTools Console to see values)</h3>
        <div id="token-values"></div>
      </div>

      <div>
        <h2>Raw HTML Button with Classes</h2>
        <button class="btn btn--size_regular btn--variant_filled btn--tone_accent">
          <span class="btn__label">Raw Button</span>
        </button>
      </div>
    </div>

    <script>
      // Check if CSS variables are defined
      const tokens = [
        "--colors-accent-dynamic",
        "--colors-button-hig-filled-accent-default-bg",
        "--font-sizes-footnote",
        "--radii-roles-button",
        "--colors-glass-bg",
      ];

      const root = document.documentElement;
      const values = tokens.map((token) => {
        const value = getComputedStyle(root).getPropertyValue(token);
        return `${token}: ${value || "‚ùå NOT DEFINED"}`;
      });

      document.getElementById("token-values").innerHTML = values.join("<br>");
      console.log(
        "CSS Variables:",
        Object.fromEntries(tokens.map((t) => [t, getComputedStyle(root).getPropertyValue(t)])),
      );
    </script>
  </body>
</html>
